<% include partials/header.ejs %>

<div class="ui main text container">
    <div class="ui huge header">Blog App</div>
    <a href="/blogs/new" class="ui violet huge button">CREATE A NEW POST</a>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% user.blogs.forEach(function(blog){ %>
                <div class="item">
                    <div class="image">
                        <img src = "<%= blog.image %>" alt = "BlogsImage">
                    </div>
                    <div class="content">
                        <a class="header" href="/blogs/<%= blog._id %>" ><%= blog.title %></a>
                        <div class="meta">
                            <span> <%= blog.created %> </span>
                        </div>
                        <div class="description">
                            <p> <%- blog.body.substring(0, 100) %>... </p>
                        </div>
                        <div class="extra">
                            <a class="ui floated basic blue button" href="/blogs/<%= blog._id %>" >
                                More Info
                                <i class="right chevron icon"></i>
                            </a>
                        </div>
                    </div>
                </div>
            <% }) %> 
        </div>
    </div>
</div>


<% include partials/footer.ejs %>