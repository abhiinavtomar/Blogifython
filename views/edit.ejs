<% include partials/header.ejs %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>

<form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
    <div class="field">
        <label>Title</label>
        <input type="text" name="blog[title]" value="<%= blog.title %>">
    </div>
    <div class="field">
        <label>Image</label>
        <input type="text" name="blog[image]" value="<%= blog.image %>">
    </div>
    
    <div class="field">
        <label>Body</label>
        <textarea name="blog[body]" required><%= blog.body %></textarea>
    </div>
    <input class="ui inverted big teal button" type="submit">
</form>
<a href="https://unsplash.com/" class="ui inverted orange button item">Find Online Pictures here , paste the URL above</a>
</div>

